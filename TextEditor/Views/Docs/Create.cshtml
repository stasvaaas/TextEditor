@model TextEditor.Models.Doc
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> userManager


@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Doc</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label" value="Untitled..."></label>
                <input asp-for="Title" class="form-control" value="Untitled"/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <textarea  id="tiny" style="width: 60vw; height:80vh" asp-for="Content" class="form-control"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="UserId" value="@userManager.GetUserId(User)" class="form-control" />
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-light ms-2 " asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
